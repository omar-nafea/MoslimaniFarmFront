{
  "rewrites": [
    {
      "source": "/api/images/:path*",
      "destination": "/api/images/:path*"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" }
      ]
    }
  ],
  "functions": {
    "api/images/[...path].js": {
      "maxDuration": 10
    }
  }
}

